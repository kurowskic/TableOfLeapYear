PROCEDURE CenterMainWindow()
*-----------------------------------------------------------------------------*

  DECLARE WINDOW win_Main

  win_Main.Row  := ( GetDesktopRealHeight() / 2 ) - ( APP_HEIGHT / 2 )
  win_Main.Col  := ( GetDesktopRealWidth()  / 2 ) - ( APP_WIDTH  / 2 )

  Do_Events()

  APP_ROW    := win_Main.Row
  APP_COL    := win_Main.Col

  Do_Events()

  aFrm[ 1 , 2 ] := APP_ROW
  aFrm[ 1 , 3 ] := APP_COL

  Do_Events()

*-----------------------------------------------------------------------------*
RETURN
